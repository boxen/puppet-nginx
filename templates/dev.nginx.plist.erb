<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.nginx</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>A fast web server.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "nginx::config::executable" %></string>
      <string>-c</string>
      <string><%= scope.lookupvar "nginx::config::configfile" %></string>
    </array>


    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "nginx::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "nginx::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "nginx::config::logdir" %>/console.log</string>
</dict>
</plist>
